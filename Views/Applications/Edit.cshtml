@model URC.Models.Application

@{
    ViewData["Title"] = "Edit";
}
@using Microsoft.AspNetCore.Identity
@using URC.Areas.Identity.Data
@inject SignInManager<URCUser> SignInManager
@inject UserManager<URCUser> UserManager
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="a page allowing students to edit their application" />
    <script src="~/js/students.js"></script>
</head>
<h1>Edit</h1>

<h4>Application for @Html.DisplayFor(model => model.Opportunity.Name)</h4>
<hr />
@if (User.Identity.Name == Model.Email)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <input asp-for="OpportunityID" hidden />
                <input asp-for="Opportunity.Name" hidden />
                <div class="form-group">
                    <label asp-for="UID" class="control-label"></label>
                    <br />
                    <label class="control-label">@UserManager.GetUserName(User).Substring(0, 8)</label>
                    <input asp-for="UID" class="form-control" value=@UserManager.GetUserName(User).Substring(0,8) hidden />
                    <span asp-validation-for="UID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <br />
                    <label class="control-label">@UserManager.GetUserName(User)</label>
                    <input asp-for="Email" class="form-control" value=@UserManager.GetUserName(User) hidden />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Skills" class="control-label"></label>
                    <input asp-for="Skills" class="form-control" />
                    <span asp-validation-for="Skills" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Interests" class="control-label"></label>
                    <input asp-for="Interests" class="form-control" />
                    <span asp-validation-for="Interests" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DegreePlan" class="control-label"></label>
                    <input asp-for="DegreePlan" class="form-control" />
                    <span asp-validation-for="DegreePlan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GPA" class="control-label"></label>
                    <input asp-for="GPA" class="form-control" />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompletedCourses" class="control-label"></label>
                    <input asp-for="CompletedCourses" class="form-control" />
                    <span asp-validation-for="CompletedCourses" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GraduationDate" class="control-label"></label>
                    <input asp-for="GraduationDate" class="form-control" />
                    <span asp-validation-for="GraduationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resume" class="control-label"></label>
                    <input asp-for="Resume" class="form-control" />
                    <span asp-validation-for="Resume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Statement" class="control-label"></label>
                    <textarea asp-for="Statement" class="form-control"></textarea>
                    <span asp-validation-for="Statement" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
